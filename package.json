{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
    "lint": "cross-env TIMING=1 eslint --ext=ts,tsx,js,yaml,yml .",
    "nuke": "pnpm --no-bail --filter=* nuke && pnpm --no-bail nuke:local",
    "nuke:local": "rimraf node_modules",
    "jest": "pnpm --filter @repobuddy/jest",
    "jestbuddy": "pnpm --filter jestbuddy",
    "js-cjs": "pnpm --filter js-cjs",
    "js-esm": "pnpm --filter js-esm",
    "ts-cjs": "pnpm --filter ts-cjs",
    "ts-esm": "pnpm --filter ts-esm",
    "two-chalk": "pnpm --filter two-chalk",
    "release": "pnpm build && changeset publish",
    "size": "turbo run size",
    "test": "turbo run test",
    "test:list": "turbo run test:list",
    "verify": "turbo run coverage depcheck size",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-plugin-harmony": "^7.1.1",
    "eslint-plugin-yml": "~1.3.0",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "turbo": "^1.6.3",
    "typescript": "^4.9.3"
  },
  "packageManager": "pnpm@7.18.0"
}
